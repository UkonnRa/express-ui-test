{
  "name": "white-rabbit",
  "version": "1.0.0",
  "description": "Wonderland WhiteRabbit root project",
  "author": "Ukonn Ra<ukonnra@outlook.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "lint": "prettier --check \"./**/*.{ts,tsx,js,json,md,mdx}\" && eslint packages services --ext .js,.ts,.tsx && npm run lint:markdown",
    "lint:fix": "prettier --write \"./**/*.{ts,tsx,js,json,md,mdx}\" && eslint packages services --fix --ext .js,.ts,.tsx && npm run lint:markdown --fix",
    "lint:markdown": "markdownlint -p .markdownlint.json README.md packages/*/README.md services/*/README.md docs/docs/*.{md,mdx}",
    "clean": "rimraf packages/*/dist/ services/*/dist/",
    "build": "npm run clean && cross-env NODE_ENV=production npm run build --workspaces --if-present && ts-node scripts/build-desktop.ts",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-eslint-plugin": "^4.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-each": "^27.3.1",
    "markdownlint-cli": "^0.29.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "fs-extra": "^10.0.0"
  }
}
