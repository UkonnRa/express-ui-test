{
  "name": "white-rabbit",
  "version": "0.0.1",
  "description": "Wonderland WhiteRabbit is an accounting tool for local or web",
  "repository": "https://github.com/alices-wonderland/white-rabbit",
  "author": "Ukonn Ra <ukonnra@outlook.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn workspaces run build",
    "test": "jest --coverage --passWithNoTests",
    "lint": "prettier --check \"./**/*.{ts,tsx,js,json,md,mdx}\" && eslint packages services --ext .ts,.tsx && yarn lint:markdown",
    "lint:fix": "prettier --write \"./**/*.{ts,tsx,js,json,md,mdx}\" && eslint packages services --fix --ext .ts,.tsx && yarn lint:markdown --fix",
    "lint:markdown": "markdownlint -p .markdownlint.json README.md packages/*/README.md services/*/README.md docs/docs/*.{md,mdx}",
    "clean": "rimraf packages/*/dist/ services/*/dist/ packages/*/types/ services/*/types/ docs/build/ docs/.docusaurus/",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.13.12",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-eslint-plugin": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-each": "^27.3.1",
    "markdownlint-cli": "^0.29.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}
