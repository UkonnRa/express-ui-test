{
  "name": "@white-rabbit/backend",
  "version": "0.0.1",
  "description": "Wonderland WhiteRabbit backend service",
  "author": "Ukonn Ra<ukonnra@outlook.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "orm:update": "mikro-orm schema:update -r",
    "dev": "cross-env PORT=3200 webpack --config ../../configs/webpack.config.dev.ts",
    "build": "webpack --config ../../configs/webpack.config.prod.ts",
    "build:analyze": "rimraf dist/ && mkdir dist && npm run --silent build -- --profile --json > dist/stats.json && webpack-bundle-analyzer -p 8889 dist/stats.json",
    "serve": "cross-env PORT=3100 node dist/index.js"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "express": "^4.17.3",
    "js-base64": "^3.7.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.0.5",
    "@types/express": "^4.17.13"
  }
}
