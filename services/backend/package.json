{
  "name": "@white-rabbit/backend",
  "version": "1.0.0",
  "description": "Wonderland WhiteRabbit backend service",
  "author": "Ukonn Ra<ukonnra@outlook.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "orm:create": "mikro-orm schema:update -r",
    "dev": "cross-env PORT=3000 webpack --config ../../configs/webpack.config.dev.ts",
    "build": "webpack --config ../../configs/webpack.config.service.prod.ts",
    "build:analyze": "rimraf dist/ && mkdir dist && npm run --silent build -- --profile --json > dist/stats.json && webpack-bundle-analyzer -p 8889 dist/stats.json",
    "serve": "cross-env PORT=3000 node dist/index.js"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@white-rabbit/business-logic": "*",
    "express": "^4.17.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9"
  }
}
