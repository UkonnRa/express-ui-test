{
  "name": "@white-rabbit/desktop",
  "private": true,
  "version": "0.0.1",
  "description": "The desktop application for Wonderland WhiteRabbit",
  "author": "Ukonn Ra <ukonnra@outlook.com>",
  "homepage": "https://github.com/alices-wonderland/white-rabbit",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "orm:update": "mikro-orm schema:update -r",
    "dev:webpack": "webpack --config ../../configs/webpack.config.desktop.dev.ts",
    "dev:electron": "electron .",
    "build:webpack": "webpack --config ../../configs/webpack.config.desktop.prod.ts",
    "build:desktop": "npm run build:webpack && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/sqlite": "^4.5.9",
    "@white-rabbit/business-logic": "*",
    "dotenv": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-env": "^1.16.3",
    "@types/webpack-node-externals": "^2.5.3",
    "electron": "15.3.0",
    "electron-builder": "^22.13.1",
    "run-script-webpack-plugin": "^0.0.11",
    "terser-webpack-plugin": "^5.2.5",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "webpack": "^5.64.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-node-externals": "^3.0.0"
  }
}
