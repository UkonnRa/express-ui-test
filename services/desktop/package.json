{
  "name": "@white-rabbit/desktop",
  "private": true,
  "version": "0.0.1",
  "description": "The desktop application for Wonderland WhiteRabbit",
  "author": "Ukonn Ra <ukonnra@outlook.com>",
  "homepage": "https://github.com/alices-wonderland/white-rabbit",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "orm:update": "mikro-orm schema:update -r",
    "dev:webpack": "webpack --config ../../configs/webpack.config.desktop.dev.ts",
    "dev:electron": "electron .",
    "build:webpack": "webpack --config ../../configs/webpack.config.desktop.prod.ts",
    "build:webpack:analyze": "rimraf dist/ && mkdir dist && npm run --silent build:webpack -- --profile --json > dist/stats.json && webpack-bundle-analyzer -p 8888 dist/stats.json",
    "build:desktop": "npm run build:webpack && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/sqlite": "^4.5.9",
    "dotenv": "^10.0.0",
    "electron-is-dev": "^2.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@white-rabbit/business-logic": "*",
    "electron": "16.0.5",
    "electron-builder": "^22.14.5"
  }
}
