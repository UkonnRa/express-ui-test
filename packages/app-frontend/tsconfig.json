{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src/",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "compilerOptions": {
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true,
    "jsx": "preserve"
  },
  "include": ["src/"],
  "exclude": ["src/**/*.spec.ts"],
  "references": [{ "path": "./tsconfig.dev.json" }]
}
